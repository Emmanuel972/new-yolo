<div class="container">
  <div class="text-center">
    <h1>Articles</h1>
  </div>
  <div class="row">
    <div class="col-md-6">
      <% @posts.each do |post| %>
        <%= link_to post_path(post) do %>
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= post.title %></h5>
              <p class="card-text"><%= post.content %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
